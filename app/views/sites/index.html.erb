<div class="page-header">
  <%= link_to new_site_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Site
  <% end %>
  <h1>Your Sites</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Website</th>
            <th>More</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @sites) do |site| %>
            <td><%= site.url %></td>
            <td><%= link_to '', site, class: 'btn btn-primary glyphicon glyphicon-search' %></td>
        <td><%= link_to '', edit_site_path(site), class: 'btn btn-primary glyphicon glyphicon-edit' %></td>
        <td><%= link_to '', site, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary glyphicon glyphicon-trash' %></td>
      <% end %>
    </tbody>
  </table>
</div>
